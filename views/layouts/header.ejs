              </li>
              
              <% } if (isAuthenticated && isAuthorised) { %>

               
                <li class="nav-item">
                  <a class="nav-link" href="/admin/dashboard">Dashbaord</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/shop">Shop</a>
                  </li>
                <li class="nav-item">
                  <a class="nav-link" href="/auth/logout">Logout</a>
                </li>
             
            <% } else if (isAuthenticated) { %>
            <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/user/dashboard">Dashboard</a>
              </li>
            <li class="nav-item">
            <a class="nav-link" href="/shop">Shop</a>
            </li>
            <li class="nav-item ">
              <a class="nav-link btn btn-primary" href="/cart">Cart <i class="fa fa-shopping-cart" aria-hidden="true"></i> <span class="badge badge-light"><%= cart %></span></a>
              </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">Logout</a>
            </li>
            <% } %>

        </ul>
