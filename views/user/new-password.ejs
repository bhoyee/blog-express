<%- include("../layouts/header"); -%>

<!-- Page Header -->
<header class="masthead">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="page-heading">
          <h1>New Password</h1>
        </div>
      </div>
    </div>
  </div>
</header>


<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
        <% if (successMsg.length > 0) { %>

            <ul>
              <% successMsg.forEach(function(success){ %>
                <li class="list-group-item text-center bg-success text-white"><%= success %></li>
              
              <% }); %>
          
              <%} else if(errors.length > 0){ %>
                <ul>
                    <% errors.forEach(function(error){ %>
                      <li class="list-group-item text-white text-center bg-danger"><%= error%></li>
                    
                    <% }); %>
                </ul>
             <% } %>
    
    
      <form action="/auth/new-password" method="POST" encType="multipart/form-data">
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Email</label>
            <input type="password" name="password" required placeholder="Password" class="form-control">
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Password</label>
            <input type="password" name="confirmPassword" required placeholder="Confirm Password" class="form-control">
          </div>
        </div>
      
        <div class="form-group my-4 text-center">
            <input type="hidden" name="userId" value="<%= userId %>">
            <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
          <button class="btn btn-primary">Update Password</button>
        </div>
      </form>
    
    </div>
  </div>
</div>



<%- include("../layouts/footer"); -%>